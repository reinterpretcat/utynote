<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="exp_limit_frame_rate"
        android:summary="@string/pref_description_limit_frame_rate"
        android:title="@string/pref_title_remember_position" />

    <ListPreference
        android:dependency="exp_limit_frame_rate"
        android:defaultValue="-1"
        android:entries="@array/pref_list_frame_rate_count_titles"
        android:entryValues="@array/pref_list_frame_rate_count_values"
        android:key="exp_frame_rate_count"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_frame_rate_count" />

</PreferenceScreen>
